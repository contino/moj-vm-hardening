{
  "builders": [
    {
      "name": "azure-os-image",
      "type": "azure-arm",
      "vm_size": "Standard_A2_v2",
      "os_type": "Linux",
      "client_id": "{{user `azure_client_id`}}",
      "client_secret": "{{user `azure_client_secret`}}",
      "subscription_id": "{{user `azure_subscription_id`}}",
      "tenant_id": "{{user `azure_tenant_id`}}",
      "object_id": "{{user `azure_object_id`}}",
      "image_publisher": "openlogic",
      "image_offer": "CentOS",
      "image_sku": "7.4",
      "location": "{{user `azure_location`}}",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_pty": "true",
      "managed_image_name": "moj-centos-agent75-{{isotime \"20060102150405\"}}",
      "managed_image_resource_group_name": "{{user `azure_resource_group_name`}}",
      "azure_tags": {
        "timestamp": "{{isotime \"20060102150405\"}}",
        "imagetype": "centos-agent75"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "repos/",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{ .Vars }} sudo -S -E sh '{{ .Path }}'",
      "inline": [
        "echo '-----BEGIN RSA PRIVATE KEY-----' | tee /tmp/jenkinsssh_id_rsa",
        "echo {{user `jenkins_ssh_key`}} | sed -e 's/[[:blank:]]\\+/\\n/g' | tee -a /tmp/jenkinsssh_id_rsa",
        "echo '-----END RSA PRIVATE KEY-----' | tee -a /tmp/jenkinsssh_id_rsa",
        "echo {{user `hashicorp_vault_token`}} | tee -a /tmp/vault-token",
        "mv /tmp/*.repo /etc/yum.repos.d/",
        "yum install -y deltarpm",
        "yum --releasever=7.5.1804 update -y",
        "yum install -y cloud-init epel-release libselinux-python centos-release-scl",
        "yum install -y python2-pip",
        "pip install --upgrade 'pip<10' docker-compose",
        "curl --location https://rpm.nodesource.com/setup_8.x | sudo bash -",
        "yum install -y nodejs",
        "npm install npm@latest minimatch@latest graceful-fs@latest -g",
        "npm install --global gulp eslint",
        "yum install -y java-1.8.0-openjdk-headless java-1.8.0-openjdk maven git yarn rpmdevtools python-jenkins azure-cli-2.0.43 dnsmasq docker-ce make gcc-c++ google-chrome-stable mesa-libOSMesa mesa-libOSMesa-devel gnu-free-sans-fonts ipa-gothic-fonts ipa-pgothic-fonts libXcursor libXdamage libXScrnSaver libXrandr pango atk at-spi2-atk gtk3 jq",
        "LIBOSMESA=$(find / -name \"libOSMesa*\" -type f)",
        "ln -s $LIBOSMESA /opt/google/chrome/libosmesa.so",
        "echo 'user.max_user_namespaces=10000' > /etc/sysctl.d/90-userspace.conf",
        "grubby --args=\"namespace.unpriv_enable=1\" --update-kernel=\"$(grubby --default-kernel)\"",
        "yum install -y rh-ruby24 rh-ruby24-ruby-devel",
        "mkdir /etc/docker && chown -R root:root /etc/docker && chmod 0755 /etc/docker",
        "echo -e '{\n  \"live-restore\": true,\n  \"group\": \"docker\"\n}' > /etc/docker/daemon.json && chown root:root /etc/docker/daemon.json && chmod 0644 /etc/docker/daemon.json",
        "systemctl enable docker",
        "mkdir -p /opt/tfenv",
        "git clone https://github.com/hmcts/tfenv.git /opt/tfenv",
        "ln -s /opt/tfenv/bin/* /usr/local/bin",
        "curl https://releases.hashicorp.com/terraform/0.11.7/terraform_0.11.7_linux_amd64.zip -o /tmp/terraform_0.11.7_linux_amd64.zip && unzip -d /usr/bin /tmp/terraform_0.11.7_linux_amd64.zip && rm -f /tmp/terraform_0.11.7_linux_amd64.zip",
        "cp /etc/chrony.conf{,.orig}",
        "echo \"refclock PHC /dev/ptp0 poll 3 dpoll -2 offset 0\" > /etc/chrony.conf && cat /etc/chrony.conf",
        "rpm -Uvh https://packages.microsoft.com/config/rhel/7/packages-microsoft-prod.rpm",
        "yum --releasever=7.5.1804 update && yum install -y libunwind libicu dotnet-runtime-2.1.0-rc1",
        "wget -O /tmp/azcopy.tar.gz https://aka.ms/downloadazcopylinux64",
        "tar -xf /tmp/azcopy.tar.gz -C /tmp",
        "/tmp/install.sh",
        "rm -rf /tmp/azcopy.tar.gz /tmp/azcopy /tmp/install.sh"
      ],
      "inline_shebang": "/bin/bash -x",
      "skip_clean": true
    },
    {
      "type": "ansible",
      "playbook_file": "./hardening.yml",
      "extra_arguments": [
        "--ssh-extra-args",
        "-o IdentitiesOnly=yes"
      ]
    }
  ],

  "variables": {
    "azure_subscription_id": "null",
    "azure_tenant_id": "null",
    "azure_object_id": "null",
    "azure_resource_group_name": "null",
    "azure_storage_account": "null",
    "azure_client_id": "null",
    "azure_client_secret": "null",
    "azure_location": "uksouth",
    "ssh_user": "null",
    "jenkins_ssh_key": "null",
    "hashicorp_vault_token": "null"
  }
}
