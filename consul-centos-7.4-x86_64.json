{
  "builders": [
    {
      "name": "azure-os-image",
      "type": "azure-arm",
      "vm_size": "Standard_A2_v2",
      "os_type": "Linux",
      "client_id": "{{user `azure_client_id`}}",
      "client_secret": "{{user `azure_client_secret`}}",
      "subscription_id": "{{user `azure_subscription_id`}}",
      "tenant_id": "{{user `azure_tenant_id`}}",
      "object_id": "{{user `azure_object_id`}}",
      "custom_managed_image_resource_group_name": "{{user `azure_resource_group_name`}}",
      "custom_managed_image_name": "{{user `base_image`}}",
      "location": "{{user `azure_location`}}",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_pty": "true",
      "managed_image_name": "moj-centos-consul-{{isotime \"20060102150405\"}}",
      "managed_image_resource_group_name": "{{user `azure_resource_group_name`}}",
      "azure_tags": {
        "timestamp": "{{isotime \"20060102150405\"}}",
        "imagetype": "consul"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{ .Vars }} sudo -S -E sh '{{ .Path }}'",
      "inline": [
        "yum install -y deltarpm",
        "yum install -y kmod-microsoft-hyper-v-4.2.3.4-20180104.x86_64",
        "yum install -y microsoft-hyper-v-4.2.3.4-20180104.x86_64",
        "yum-config-manager --disable openlogic",
        "yum --releasever=7.4.1708 update -y",
        "yum install -y cloud-init epel-release libselinux-python",
        "yum install -y python2-pip",
        "pip install --upgrade 'pip<10'",
        "cp /etc/chrony.conf{,.orig}",
        "echo \"refclock PHC /dev/ptp0 poll 3 dpoll -2 offset 0\" > /etc/chrony.conf && cat /etc/chrony.conf"
      ],
      "inline_shebang": "/bin/bash -x",
      "skip_clean": true
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "sudo yum install epel-release -y && sudo yum update -y",
        "sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc",
        "sudo sh -c 'echo -e \"[azure-cli]\nname=Azure CLI\nbaseurl=https://packages.microsoft.com/yumrepos/azure-cli\nenabled=1\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc\" > /etc/yum.repos.d/azure-cli.repo'",
        "sudo yum check-update && sudo yum install -y azure-cli git python-pip cloud-init",
        "git clone https://{{user `github_token`}}@github.com/hmcts/moj-module-consul.git /tmp/terraform-consul-azure",
        "/tmp/terraform-consul-azure/modules/install-consul/install-consul --version {{user `consul_version`}}",
        "/tmp/terraform-consul-azure/modules/install-dnsmasq/install-dnsmasq",
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "skip_clean": true
    }
  ],

  "variables": {
    "azure_subscription_id": "null",
    "azure_tenant_id": "null",
    "azure_object_id": "null",
    "azure_resource_group_name": "null",
    "azure_storage_account": "null",
    "azure_client_id": "null",
    "azure_client_secret": "null",
    "azure_location": "uksouth",
    "ssh_user": "null",
    "github_token": "null",
    "consul_version": "0.9.2",
    "base_image": "null"
  }
}
